<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/ppp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Welcome\n book your next workout!"/>


    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name " />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the reservation date"
        android:inputType="date"/>

    <RadioGroup
        android:id="@+id/radioGroupTrainers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButtonTrainer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coach Muhammad"/>

        <RadioButton
            android:id="@+id/radioButtonTrainer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coach Sara"/>

        <RadioButton
            android:id="@+id/radioButtonTrainer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coach Khalid"/>
    </RadioGroup>

    <Button
        android:id="@+id/buttonBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Book now" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginVertical="20dp"
        android:background="#BA7979"
        android:text="About" />

    <Button
        android:id="@+id/callusButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textSize="20dp"
        android:background="#BA7979"
        android:text="Call Us"/>

    <Button
        android:id="@+id/existButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginVertical="20dp"
        android:background="#BA7979"
        android:text="Exist"/>


</LinearLayout>